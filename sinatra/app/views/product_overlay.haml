    %table{:cellpadding=>"0",:cellspacing=>"0"}
      %tr
        %td.cerrar
          =img "/images/cerrar.png"
      %tr
        %td
          =img "/images/online-spot.png"
      %tr
        %td
          =img "/images/minidialogo.png"
