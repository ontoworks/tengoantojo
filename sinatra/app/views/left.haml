#tabs
  %ul.navigation#tab-ul
    %li
      %a#search-btn.first{:href=>"#inicio"}
        %em buscar
    %li
      %a#favoritos-btn{:href=>"#favoritos"}
        %em favoritos
    %li
      %a#mi-tienda-btn{:href=>"#mi-tienda"}
        %em mi tienda
    %li
      %a{:id=>"promociones-btn",:href=>"#promociones"}
        %em promociones
  .scroll
    .scrollContainer#listings-container
      .panel.tab#inicio
        .tab-container
          =haml :tagcloud
          =haml :product_list
      .panel.tab#favoritos
        .tab-container
          =haml :categorias_nav
          .clear &nbsp;
          .tab-control-container
            %button#arriba Arriba
            %button#abajo Abajo
          .product-list#product-list
            =mock_products 10
      .panel.tab#mi-tienda
        .tab-container
          =haml :product_nav
          .clear &nbsp;
          .tab-control-container
            %button#arriba Arriba
            %button#abajo Abajo
          .product-list#mi-tienda-product-list
            =product_overlay
            =haml :product_list_scroll
      .panel.tab#promociones
        .tab-container
          =haml :categorias_nav
          .clear &nbsp;
          .tab-control-container
            %button#arriba Arriba
            %button#abajo Abajo
          .product-list#product-list
            =mock_products 10