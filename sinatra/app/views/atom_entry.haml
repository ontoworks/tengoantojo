!!! XML
%entry{:xmlns=>'http://www.w3.org/2005/Atom', "xmlns:g"=>'http://base.google.com/ns/1.0'}
  -if entry.author
    %author
      %name #{entry.author[:name]}
      %email #{entry.author[:email]}
  %title{:type=>"text"} #{entry.title}
  %content{:type=>"text"} #{entry.content}
  %g:id #{entry.g.id}
  %g:item_language{:type=>"text"} #{entry.g.item_language}
  %g:item_type{:type=>"text"} #{entry.g.item_type}
  - if entry.g.label
    %g:label #{entry.g.label}
  - if entry.g.item_type == "products"
    %g:product_type #{entry.g.product_type}
    %g:condition #{entry.g.condition}
    %g:price #{entry.g.price}